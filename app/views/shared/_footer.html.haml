.footer
  .footer__form
    .footer__form--body
      = form_for [@group, @message], url: group_messages_path(@group) do |f|
        = f.text_field :text, placeholder: 'type a message please', class: 'footer__form--body-message'
        .footer__form--body-icon
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'submit'
