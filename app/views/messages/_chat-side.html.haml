.chat-side
  .chat-side__user
    .chat-side__user-box
      .chat-side__user-name
        = current_user.name
      .chat-side__icon
        .chat-side__icon--new-group
          %i.fa.fa-pencil-square-o
        .chat-side__icon--edit-user
        = link_to edit_user_path(current_user) do
          %i.fa.fa-cog

  .chat-side__groups
    .chat-side__groups-list
      .chat-side__group
        .chat-side__group-name
          Group1
        .chat-side__group-message
          Message
      .chat-side__group
        .chat-side__group-name
          Group2
        .chat-side__group-message
          Message
      .chat-side__group
        .chat-side__group-name
          Group3
        .chat-side__group-message
          Message
